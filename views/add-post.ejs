<%- include('includes/head.ejs') %>

    <div class="top-container">
      <div class="container-text">
        <h1>Adicionar novo post</h1>
      </div>
    </div>

    <div class="form-container">
      <form class="form" method="POST" action="/posts/add" enctype="multipart/form-data">
        <div class="input-container">
          <label for="title">Título</label>
          <input type="text" name="title" id="title">
        </div>
        <div class="input-container">
          <label for="description">Descrição</label>
          <input type="text" name="description" id="description">
        </div>
        <div class="input-container image-input">
          <label for="image">Adicionar foto do artigo</label>
          <input type="file" name="image" id="image" accept="image/*">
          <span class="image-name" id="image-name"></span>
        </div>
        <div class="input-container">
          <label for="text">Texto</label>
          <textarea name="text" id="text"></textarea>
        </div>
        <button name="submitButton" class="submitButton">Publicar artigo</button>
      </form>
    </div>

    <script>
    var input = document.querySelector('#image'),
    imageName = document.querySelector('#image-name');

    input.addEventListener('change', function() {
      imageName.textContent = this.value;
    });
    </script>

    
